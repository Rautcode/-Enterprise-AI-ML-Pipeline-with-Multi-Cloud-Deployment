# Environment Variables Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=ML Pipeline API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_PATH=/app/models
DEFAULT_MODEL=default
MODEL_CACHE_SIZE=10
MODEL_TIMEOUT=300

# =============================================================================
# Monitoring Configuration
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
CORS_ORIGINS=*
API_KEY=

# =============================================================================
# Storage Configuration
# =============================================================================
STORAGE_BACKEND=local
AWS_BUCKET=
AZURE_CONTAINER=

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
DATABASE_URL=
REDIS_URL=

# =============================================================================
# External Services Configuration
# =============================================================================
MLFLOW_TRACKING_URI=
PROMETHEUS_GATEWAY=

# =============================================================================
# Azure Configuration
# =============================================================================
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_SUBSCRIPTION_ID=
AZURE_REGISTRY=
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-west-2
AWS_ACCOUNT_ID=
ECR_REGISTRY=
S3_BUCKET=

# =============================================================================
# Kubernetes Configuration
# =============================================================================
KUBE_NAMESPACE=ml-pipeline
CLUSTER_NAME=
RESOURCE_GROUP=

# =============================================================================
# CI/CD Configuration
# =============================================================================
GITHUB_TOKEN=
DOCKER_REGISTRY=
IMAGE_TAG=latest

# =============================================================================
# Monitoring and Alerting
# =============================================================================
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=15d
ALERT_WEBHOOK_URL=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_GPU_NODES=false
ENABLE_BLUE_GREEN_DEPLOYMENT=true
ENABLE_CANARY_DEPLOYMENT=false
ENABLE_MULTI_CLOUD=false
